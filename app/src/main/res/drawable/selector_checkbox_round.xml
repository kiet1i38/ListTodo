<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- TRẠNG THÁI ĐÃ CHỌN (Hình tròn Tím + Dấu Check trắng) -->
    <item android:state_checked="true">
        <layer-list>
            <!-- Nền tròn tím -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="#d2dce8"/> <!-- Màu tím như hình -->
                    <size android:width="24dp" android:height="24dp"/>
                </shape>
            </item>
            <!-- Dấu check trắng (Cần có icon ic_check_white) -->
            <item android:drawable="@drawable/ic_check_white"
                android:top="5dp" android:bottom="5dp"
                android:left="5dp" android:right="5dp"/>
        </layer-list>
    </item>

    <!-- TRẠNG THÁI CHƯA CHỌN (Hình tròn viền xám nhạt) -->
    <item>
        <shape android:shape="oval">
            <stroke android:width="2dp" android:color="#E0E0E0"/>
            <solid android:color="@android:color/transparent"/>
            <size android:width="24dp" android:height="24dp"/>
        </shape>
    </item>
</selector>