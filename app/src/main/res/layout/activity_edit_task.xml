<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray">

    <!-- 1. HEADER -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/background_gray">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu"
            android:rotation="90"
            android:layout_centerVertical="true"
            app:tint="@color/black"/>

        <TextView
            android:text="Danh Sách Công Việc"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <!-- 2. NỘI DUNG SCROLL -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@id/layout_buttons"
        android:paddingHorizontal="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <!-- KHỐI 1: TÊN & CHIP -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <EditText
                        android:id="@+id/edt_task_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:text="Ăn cứt"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:hint="Tên công việc"/>

                    <!-- Các nút chip (Thời gian, Cấp bậc...) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">

                        <Button
                            android:id="@+id/btn_chip_date"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:text="Thời Gian"
                            android:textSize="12sp"
                            android:drawableStart="@drawable/ic_calendar"
                            android:paddingHorizontal="8dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:id="@+id/btn_chip_priority"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:text="Cấp Bậc"
                            android:textSize="12sp"
                            android:drawableStart="@drawable/ic_dashboard"
                            android:paddingHorizontal="8dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_marginEnd="8dp"/>

                        <Button
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:text="Công Việc"
                            android:textSize="12sp"
                            android:drawableStart="@drawable/ic_check_circle"
                            android:paddingHorizontal="8dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- KHỐI 2: CÔNG VIỆC CON (SUB-TASK) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView android:src="@drawable/ic_add" android:layout_width="24dp" android:layout_height="24dp" app:tint="@color/black"/>
                        <TextView         android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thêm công việc con" android:textSize="16sp" android:textColor="@color/black" android:layout_marginStart="12dp"/>
                    </LinearLayout>

                    <View android:background="#E0E0E0" android:layout_height="1dp" android:layout_width="match_parent" android:layout_marginVertical="12dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- KHỐI 3: CÀI ĐẶT (Settings) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Item 1: Thời gian -->
                    <include layout="@layout/item_setting_row" android:id="@+id/row_time"/>

                    <!-- Item 2: Nhắc nhở -->
                    <include layout="@layout/item_setting_row" android:id="@+id/row_reminder"/>

                    <!-- Item 3: Lặp lại -->
                    <include layout="@layout/item_setting_row" android:id="@+id/row_repeat"/>

                    <!-- Item 4: Âm thanh -->
                    <include layout="@layout/item_setting_row" android:id="@+id/row_sound"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- KHỐI 4: GHI CHÚ -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">
                    <ImageView android:src="@drawable/ic_menu" android:layout_width="24dp" android:layout_height="24dp" app:tint="@color/black"/>
                    <EditText
                        android:id="@+id/edt_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ghi chú"
                        android:background="@null"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- 3. BUTTONS BOTTOM -->
    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white">

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="56dp"
            android:text="Xóa"
            android:backgroundTint="#FF3B30"
            android:layout_marginEnd="12dp"
            app:cornerRadius="28dp"/>

        <Button
            android:id="@+id/btn_save_changes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="56dp"
            android:text="Lưu"
            android:backgroundTint="@color/blue_primary"
            app:cornerRadius="28dp"/>
    </LinearLayout>

</RelativeLayout>