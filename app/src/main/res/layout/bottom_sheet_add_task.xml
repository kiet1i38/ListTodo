<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_bottom_sheet_rounded">

    <TextView
        android:text="Tạo công việc mới"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edt_task_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tên công việc (VD: Nộp bài Mobile)"
        android:background="@null"
        android:textSize="18sp"
        android:minHeight="48dp"/>

    <!-- THANH CUỘN NGANG CÁC NÚT CHỌN -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 1. Thời gian -->
            <Button
                android:id="@+id/btn_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hôm nay"
                android:textSize="12sp"
                android:drawablePadding="4dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginEnd="8dp"/>

            <!-- 2. Cấp bậc -->
            <Button
                android:id="@+id/btn_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bình thường"
                android:textSize="12sp"
                android:drawablePadding="4dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginEnd="8dp"/>

            <!-- 3. Danh mục (Mới) -->
            <Button
                android:id="@+id/btn_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Công Việc"
                android:textSize="12sp"
                android:drawablePadding="4dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginEnd="8dp"/>

            <!-- 4. Địa điểm (Mới) -->
            <Button
                android:id="@+id/btn_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa điểm"
                android:textSize="12sp"
                android:drawablePadding="4dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lưu Công Việc"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue_primary"
        android:layout_marginTop="24dp"/>
</LinearLayout>