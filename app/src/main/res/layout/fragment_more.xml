<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem Thêm"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"/>

        <!-- 1. Tiện ích Máy Tính Để Bàn -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="12dp">
            <include layout="@layout/item_more_menu" android:id="@+id/menu_widget"/>
        </androidx.cardview.widget.CardView>

        <!-- 2. Ngày Đếm Ngược -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="12dp">
            <include layout="@layout/item_more_menu" android:id="@+id/menu_countdown"/>
        </androidx.cardview.widget.CardView>

        <!-- 3. Đồng Hồ Hẹn Giờ -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="12dp">
            <include layout="@layout/item_more_menu" android:id="@+id/menu_timer"/>
        </androidx.cardview.widget.CardView>

        <!-- 4. Máy Tính Ngày Tháng -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="12dp">
            <include layout="@layout/item_more_menu" android:id="@+id/menu_date_calc"/>
        </androidx.cardview.widget.CardView>

        <!-- 5. Thống Kê Todoits -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="12dp">
            <include layout="@layout/item_more_menu" android:id="@+id/menu_stats"/>
        </androidx.cardview.widget.CardView>

        <!-- 6. Đồng Bộ Server (Backend) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="12dp">
            <include layout="@layout/item_more_menu" android:id="@+id/menu_sync"/>
        </androidx.cardview.widget.CardView>

        <!-- 7. ĐĂNG XUẤT (Thêm mới) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="40dp">
            <LinearLayout
                android:id="@+id/menu_logout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:background="?attr/selectableItemBackground">

                <ImageView android:src="@drawable/ic_menu" android:layout_width="24dp" android:layout_height="24dp" app:tint="#FF3B30"/>
                <TextView android:text="Đăng Xuất" android:textColor="#FF3B30" android:textSize="16sp" android:layout_marginStart="16dp" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>