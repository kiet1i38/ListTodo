<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem Thêm"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"/>

        <!-- 1. Tiện ích Máy Tính Để Bàn -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="12dp">
            <include layout="@layout/item_more_menu" android:id="@+id/menu_widget"/>
        </androidx.cardview.widget.CardView>

        <!-- 2. Ngày Đếm Ngược -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="12dp">
            <include layout="@layout/item_more_menu" android:id="@+id/menu_countdown"/>
        </androidx.cardview.widget.CardView>

        <!-- 3. Đồng Hồ Hẹn Giờ -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="12dp">
            <include layout="@layout/item_more_menu" android:id="@+id/menu_timer"/>
        </androidx.cardview.widget.CardView>

        <!-- 4. Máy Tính Ngày Tháng -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="12dp">
            <include layout="@layout/item_more_menu" android:id="@+id/menu_date_calc"/>
        </androidx.cardview.widget.CardView>

        <!-- 5. Thống Kê Todoits -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="12dp">
            <include layout="@layout/item_more_menu" android:id="@+id/menu_stats"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>