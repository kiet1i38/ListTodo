<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:weightSum="2">

    <TextView android:text="Độ quan trọng" android:textSize="24sp" android:textStyle="bold" android:layout_marginBottom="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <!-- Hàng 1 -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal" android:weightSum="2">
        <!-- Ô 1: Đỏ -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="4dp" app:cardCornerRadius="12dp" app:cardElevation="2dp">
            <LinearLayout android:orientation="vertical" android:padding="8dp" android:layout_width="match_parent" android:layout_height="match_parent">
                <View android:background="@color/quadrant_1_red" android:layout_width="40dp" android:layout_height="4dp" android:layout_gravity="center_horizontal"/>
                <TextView android:text="(Quan trọng &amp; Khẩn)" android:textColor="@color/quadrant_1_red" android:textSize="10sp" android:gravity="center" android:layout_marginTop="4dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_q1" android:layout_width="match_parent" android:layout_height="match_parent"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Ô 2: Vàng -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="4dp" app:cardCornerRadius="12dp" app:cardElevation="2dp">
            <LinearLayout android:orientation="vertical" android:padding="8dp" android:layout_width="match_parent" android:layout_height="match_parent">
                <View android:background="@color/quadrant_2_orange" android:layout_width="40dp" android:layout_height="4dp" android:layout_gravity="center_horizontal"/>
                <TextView android:text="(Quan trọng không Khẩn)" android:textColor="@color/quadrant_2_orange" android:textSize="10sp" android:gravity="center" android:layout_marginTop="4dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_q2" android:layout_width="match_parent" android:layout_height="match_parent"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Hàng 2: Xanh dương & Lục (Copy tương tự Hàng 1, đổi màu) -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal" android:weightSum="2" android:layout_marginTop="8dp">
        <!-- Code tương tự trên, thay màu quadrant_3_blue và quadrant_4_green -->
        <!-- Ô 3: Đỏ -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="4dp" app:cardCornerRadius="12dp" app:cardElevation="2dp">
            <LinearLayout android:orientation="vertical" android:padding="8dp" android:layout_width="match_parent" android:layout_height="match_parent">
                <View android:background="@color/quadrant_1_red" android:layout_width="40dp" android:layout_height="4dp" android:layout_gravity="center_horizontal"/>
                <TextView android:text="(Quan trọng &amp; Khẩn)" android:textColor="@color/quadrant_3_blue" android:textSize="10sp" android:gravity="center" android:layout_marginTop="4dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_q3" android:layout_width="match_parent" android:layout_height="match_parent"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Ô 4: Vàng -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="4dp" app:cardCornerRadius="12dp" app:cardElevation="2dp">
            <LinearLayout android:orientation="vertical" android:padding="8dp" android:layout_width="match_parent" android:layout_height="match_parent">
                <View android:background="@color/quadrant_2_orange" android:layout_width="40dp" android:layout_height="4dp" android:layout_gravity="center_horizontal"/>
                <TextView android:text="(Quan trọng không Khẩn)" android:textColor="@color/quadrant_4_green" android:textSize="10sp" android:gravity="center" android:layout_marginTop="4dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_q4" android:layout_width="match_parent" android:layout_height="match_parent"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>