    <style name="Base.Theme.ListTodo" parent="Theme.Material3.DayNight.NoActionBar">

    </style>


    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">#246BFD</item> 
        <item name="colorPrimary">#246BFD</item>
    </style>

    <style name="CalenderViewWeekCustom" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CalenderViewDateCustom" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyTimePickerTheme" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">#246BFD</item> 
        <item name="colorOnPrimary">#FFFFFF</item> 
        <item name="materialTimePickerTitleStyle">@style/MyTimePickerTitle</item>
        <item name="colorControlActivated">#246BFD</item>
    </style>

    <style name="MyTimePickerTitle" parent="TextAppearance.MaterialComponents.TimePicker.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.ListTodo" parent="Base.Theme.ListTodo" />
