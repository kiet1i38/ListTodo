<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ListTodo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <!-- Style cho CalendarView -->
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">#246BFD</item> <!-- Màu xanh mũi tên và ngày chọn -->
        <item name="colorPrimary">#246BFD</item>
    </style>

    <style name="CalenderViewWeekCustom" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CalenderViewDateCustom" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Style riêng cho TimePicker để giống hình -->
    <style name="MyTimePickerTheme" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">#246BFD</item> <!-- Màu xanh chủ đạo của App -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- Màu chữ trên nền xanh -->
        <item name="materialTimePickerTitleStyle">@style/MyTimePickerTitle</item>
        <!-- Chỉnh màu cái kim đồng hồ và số được chọn -->
        <item name="colorControlActivated">#246BFD</item>
    </style>

    <style name="MyTimePickerTitle" parent="TextAppearance.MaterialComponents.TimePicker.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.ListTodo" parent="Base.Theme.ListTodo" />
</resources>